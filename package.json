{
  "name": "react-webpack-rails-tutorial",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": "6.9.0",
    "npm": "4.1.1"
  },
  "scripts": {
    "postinstall": "cd client && yarn install",
    "start": "foreman start",
    "start:dev": "foreman start -f Procfile.dev",
    "build": "cd client && npm run build --",
    "build:dev": "cd client && npm run build:dev --",
    "build:test": "cd client && npm run build:test --",
    "build:prod": "cd client && npm run build:prod --",
    "translate": "bundle exec rake react_on_rails:locale",
    "clean": "npm run clean:app && npm run clean:vendor",
    "clean:app": "rm -r public/webpack/* || true",
    "clean:vendor": "rm -r app/assets/webpack/* || true",
    "test": "rspec"
  }
}
